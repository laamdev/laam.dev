---
import "@/styles/global.css";

import { ClientRouter } from "astro:transitions";

import Header from "@/components/navigation/Header.astro";
import Footer from "@/components/navigation/Footer.astro";

import { SITE_DETAILS } from "@/constants";

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="font-sans">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph / Social Media Meta Tags -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={SITE_DETAILS.url} />
    <meta
      property="og:title"
      content={title ? `${title} | ${SITE_DETAILS.title}` : SITE_DETAILS.title}
    />
    <meta property="og:description" content={SITE_DETAILS.description} />
    <meta property="og:image" content={`${SITE_DETAILS.url}/og.png`} />

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={SITE_DETAILS.url} />
    <meta
      name="twitter:title"
      content={title ? `${title} | ${SITE_DETAILS.title}` : SITE_DETAILS.title}
    />
    <meta name="twitter:description" content={SITE_DETAILS.description} />
    <meta name="twitter:image" content={`${SITE_DETAILS.url}/og.png`} />

    <title>
      {title ? `${title} | ${SITE_DETAILS.title}` : SITE_DETAILS.title}
    </title>
    <ClientRouter />
  </head>
  <body class="container">
    <Header />
    <slot />
    <Footer />
  </body>
</html>
