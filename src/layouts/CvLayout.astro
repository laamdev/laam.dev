---
import "@/styles/global.css";

import "@fontsource-variable/fira-code";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <title>{title}</title>
  </head>
  <body class="max-w-2xl mx-auto py-16 font-mono bg-white text-black">
    <slot />
  </body>
</html>
